 <section class="background">
  <div class="container">
    <div class='row'>
      <div class='col-xs-3'></div>
      <div class='col-xs-6'>
        <div class="box-shadow">
          <br>
          <h4>Contact-us for more information about your stay</h4>
          <%= form_for @message, url: create_message_url do |f| %>
          <%= notice %>
          <%= @message.errors.full_messages.join(', ') %><br><br>
          Name:
          <%= f.text_field :name, placeholder: 'name' %>
          Email:
          <%= f.email_field :email, placeholder: 'email' %><br><br>
          Message:
          <%= f.text_area :body, placeholder: 'body' %><br><br>
          <%= f.submit 'Send' %>
          <% end %>
        </div>
      </div>
      <div class='col-xs-3'></div>
    </div>
  </div>
</section>
