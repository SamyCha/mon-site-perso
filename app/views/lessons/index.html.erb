<section class="background">
  <p id="notice"><%= notice %></p>
  <div class="container-fluid">
    <div class="row">
      <div class='col-xs-8'>


        <% @lessons.each do |lesson| %>
    <div class="col-xs-12 col-sm-6">

        <%= link_to lesson do %>
        <div class="card">
        <%= cl_image_tag lesson.photos.first.path, width: 430, height: 175 %>
          <div class="card-category"><%= lesson.golf %></div>
          <div class="card-description">
            <h2><%= lesson.name %></h2>
            <p>from <%= lesson.minimum_price %> eur</p>
          </div>
          <%= image_tag "vigiers.png", class:"card-user" %>
          <div class="card-link">
          </div>
        </div>
        <br>
        <% end %>
        </div>
        <% end %>





      </div>
        <div id="hidden-mobile">
      <div class="col-xs-4">
        <div id="map" style="width: 100%; height: 700px;" data-markers="<%= @markers.to_json %>"></div>
      </div>
      </div>
    </div>
  </div>
</section>

